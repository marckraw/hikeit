{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalDotEnv": [".env.local", ".env"],
  "globalEnv": ["BASE_URL"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "env": ["BASE_URL"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
